<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="100"
  >

    <ImageView

        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="40"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"

     />
    
    
        <TextView
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="4"
           />

    <android.support.v7.widget.CardView

        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="10"

        >

        <TextView
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:textSize="15sp"
       android:layout_weight="10"
       android:text="We would love to hear from you !"
       android:visibility="visible" android:textColor="#ffffff"
       android:background="#9e9e9e"

       android:paddingTop="0dp"
       android:gravity="center_horizontal|center_vertical"
       android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="10dip"
        android:layout_weight="12"
        android:gravity="left"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        >
       
       <LinearLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              >

        <LinearLayout
            android:id="@+id/duobleinn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
           
           android:layout_weight="20"
           android:weightSum="100" 

           android:orientation="horizontal" >
             
            <ImageView
                android:id="@+id/uimage"
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:background="#ffffff"
               
                android:src="@drawable/sms"


              
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="1dp"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/sendmessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="left"
            android:text="MESSAGE"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:textSize="15sp"
            android:maxLines="1"
            android:textColor="#616161"
            android:background="#ffffff"
            android:clickable="true"


            >
            
        </TextView>
        
    </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="10dip"
        android:layout_weight="12"
        android:gravity="left"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        >

       <LinearLayout
         
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="horizontal"
              >

        <LinearLayout
            android:id="@+id/duobleinn1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
           
           android:layout_weight="20"
           android:weightSum="100" 
           android:background="#ffffff"
           android:orientation="horizontal" >
             
            <ImageView
                android:id="@+id/uimag1"
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:src="@drawable/call"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="1dp"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/sendcall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:textSize="15sp"
            android:text="CALL"
            android:textColor="#616161"
            android:background="#ffffff"
            android:clickable="true"
        
        
            >
             <requestFocus />
        </TextView>
        
    </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="10dip"
        android:layout_weight="12"
        android:gravity="left"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"

                android:layout_weight="20"
                android:weightSum="100"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView

                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/whatsupp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="1dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/whatsupp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:textSize="15sp"
                android:text="WHATSAPP"
                android:textColor="#616161"
                android:background="#ffffff"
                android:clickable="true"


                >
                <requestFocus />
            </TextView>

        </LinearLayout>

    </android.support.v7.widget.CardView>
   

</LinearLayout>
