<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="#ffffff"
        android:layout_marginRight="2dp"
        android:elevation="2dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ratinglist_driver_image"
            android:src="@drawable/driver"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="40"
            android:padding="8dp"
            />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal"
            android:text="Driver Rating"
            android:textSize="10dp"
            android:layout_weight="10"
            android:textColor="#9e9e9e"
            android:paddingTop="2dp"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/driverratingBar"
            android:layout_weight="10"
            android:clickable="false"
            android:stepSize="1"
            android:numStars="5"
            android:theme="@style/RatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="center_horizontal"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal"
            android:text="Company Rating"
            android:textSize="10dp"
            android:layout_weight="10"
            android:textColor="#9e9e9e"
            android:paddingTop="2dp"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/companyratingBar"
            android:layout_weight="10"
            android:clickable="false"
            android:stepSize="1"
            android:numStars="5"
            android:theme="@style/RatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_margin="1dp">



        <LinearLayout

            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:weightSum="100"
            android:background="@drawable/profile_back_ground"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="Shipment No"
                android:textSize="10dp"
                android:layout_weight="40"
                android:textColor="#9e9e9e"
                android:paddingTop="2dp"
                />

            <TextView
                android:id="@+id/ratingshipmentno1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="60"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:weightSum="100"
            android:background="@drawable/profile_back_ground"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="Vehicle No"
                android:textSize="10dp"
                android:layout_weight="40"
                android:textColor="#9e9e9e"
                android:paddingTop="2dp"
                />

            <TextView
                android:id="@+id/ratingvehiclnumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"


                android:textSize="15dp"
                android:layout_weight="100"
                />

        </LinearLayout>




        <LinearLayout

            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:weightSum="100"
            android:background="@drawable/profile_back_ground"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="Date#Time"
                android:textSize="10dp"
                android:layout_weight="40"
                android:textColor="#9e9e9e"
                android:paddingTop="2dp"
                />

            <TextView
                android:id="@+id/ratingbooked_datetime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"


                android:textSize="15dp"
                android:layout_weight="60"
                />

        </LinearLayout>





        <LinearLayout

            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:weightSum="100"
            android:background="@drawable/profile_back_ground"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="From City"
                android:textSize="10dp"
                android:layout_weight="40"
                android:textColor="#9e9e9e"
                android:paddingTop="2dp"
                />

            <TextView
                android:id="@+id/ratingfromshipment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"


                android:textSize="15dp"
                android:layout_weight="60"
                />

        </LinearLayout>







        <LinearLayout
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:weightSum="100"
            android:background="#ffffff"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="To City"
                android:textSize="10dp"
                android:layout_weight="40"
                android:textColor="#9e9e9e"
                android:paddingTop="2dp"
                />

            <TextView
                android:id="@+id/ratingtocityreport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:gravity="left"


                android:textSize="15dp"
                android:layout_weight="60"
                />

        </LinearLayout>


    </LinearLayout>



    </LinearLayout>








</android.support.v7.widget.CardView>
