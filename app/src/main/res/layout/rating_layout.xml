    <Button
        android:id="@+id/imageView_round"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:text="Mavyn"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/colorPrimary"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"

        android:gravity="center_horizontal|center_vertical"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:textStyle="normal"

        />



    <TextView
        android:id="@+id/company_comment"
        android:layout_width="200dp"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:background="#ffffff"

        android:textStyle="normal"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/mayvy_rating_bar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10"
        android:clickable="true"

        android:stepSize="1"
        android:numStars="5"/>

    <EditText
        android:id="@+id/mavyn_comment_box"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:hint="Write Comment"
        android:paddingLeft="12dp"
        android:gravity="top"
        android:textSize="15sp"
        android:textColorHint="#aaa"
        android:maxLines="5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:text="Driver Rating"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:gravity="center_horizontal"
        />


    <ImageView
        android:id="@+id/imageView_round0"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:src="@drawable/ratedriver"
        android:gravity="center_horizontal"

        />



    <TextView
        android:id="@+id/rateMessage"
        android:layout_width="200dp"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:textStyle="normal"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/driver_rating_bar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10"
        android:clickable="true"
        android:stepSize="1"
        android:numStars="5"
        android:rating="0"

        />

    <EditText
        android:id="@+id/driver_comment_box"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:hint="Write Comment"
        android:paddingLeft="12dp"
        android:gravity="top"
        android:textSize="15sp"
        android:textColorHint="#aaa"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            >


            <Button
                android:id="@+id/submit_rating"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_margin="4dp"
                android:textStyle="normal"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="18sp"
                android:background="@color/colorPrimary"

                />


            <TextView


                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:gravity="center_vertical"



                />




            <Button
                android:id="@+id/no_thank"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="No Thanks"
                android:textColor="@android:color/darker_gray"
                android:layout_margin="4dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:background="@drawable/layoutborder2"
                android:textAllCaps="false"
                android:gravity="center_vertical|center_horizontal"
                />
        </LinearLayout>









</LinearLayout>
